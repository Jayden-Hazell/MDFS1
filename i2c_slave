#include <Wire.h> 

#define i2c_address 8
byte i2c_array[4];

void setup() {
  Wire.begin(i2c_address); 
  Serial.begin(9600);
  Wire.onReceive(receiveEvent);
}

void loop() {
  Wire.onReceive(readData);
  Wire.onRequest(sendData);

}

void readData(int howmany) { //howmany = Wire.write()executed by Master
  for(int i=0; i<howmany; i++)
  {
    i2c_array[i] = Wire.read();
    Serial.print(i2c_array[i], HEX);
    Serial.println();
  }
}

void writeData(){

  data[0] = ; //left wheel
  data[1] =; //right wheel
  data[2] = ; 
  data[3] =;

  Wire.write(i2c_array, sizeof(i2c_array))
}
